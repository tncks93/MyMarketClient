<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wallet.PrivateKeyActivity">
    <include layout="@layout/actionbar_default"
        android:id="@+id/toolbar_private_key"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/edit_private_key"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:gravity="start"
        android:background="@drawable/filled_edit_text"
        app:layout_constraintTop_toBottomOf="@id/toolbar_private_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:hint="privateKey를 입렵해 주세요"
        android:inputType="text"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btn_private_key"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/edit_private_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        tools:text="계정 가져오기 "
        android:textSize="20sp"
        android:textStyle="bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>