<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.SearchActivity">
    <include
        android:id="@+id/toolbar_search"
        layout="@layout/actionbar_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/layout_default_padding_start_end"
            android:paddingEnd="@dimen/layout_default_padding_start_end"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <EditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/filled_edit_text"
                android:drawableStart="@drawable/ic_hint_for_search"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:hint="@string/str_hint_search"
                android:textColorHint="@color/gray_hint"
                android:inputType="text"
                android:maxLength="30"
                android:imeOptions="actionSearch"
                />


            <TextView
                android:id="@+id/txt_category_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_category_goods"
                app:layout_constraintTop_toBottomOf="@id/edit_search"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_category_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_category_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>