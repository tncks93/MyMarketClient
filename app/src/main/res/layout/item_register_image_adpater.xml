<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_register_goods_adapter"
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/user_default"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/txt_for_main_image_goods_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대표"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        app:layout_constraintTop_toTopOf="@id/img_register_goods_adapter"
        app:layout_constraintStart_toStartOf="@id/img_register_goods_adapter"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/btn_clear_image_goods_adapter"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="@id/img_register_goods_adapter"
        app:layout_constraintEnd_toEndOf="@id/img_register_goods_adapter"
        android:src="@drawable/ic_image_clear"
        />



</androidx.constraintlayout.widget.ConstraintLayout>