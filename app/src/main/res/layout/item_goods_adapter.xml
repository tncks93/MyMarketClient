<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_item_goods"
        android:layout_width="108dp"
        android:layout_height="108dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/user_default"
        />

    <TextView
        android:id="@+id/txt_category_item_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_item_goods"
        app:layout_constraintStart_toEndOf="@id/img_item_goods"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:paddingStart="5dp"
        tools:text="디지털기기"/>
    <ImageButton
        android:id="@+id/btn_more_item_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_purchase"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txt_name_item_goods"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        app:layout_constraintTop_toBottomOf="@id/txt_category_item_goods"
        app:layout_constraintStart_toEndOf="@id/img_item_goods"
        android:layout_marginStart="20dp"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="아이폰 14프로 256기"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingStart="5dp"/>
    <TextView
        android:id="@+id/txt_state_item_goods"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        tools:text="판매완료"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/outlined_edit_text"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/txt_price_item_goods"
        app:layout_constraintBottom_toBottomOf="@id/txt_price_item_goods"
        app:layout_constraintStart_toStartOf="@id/txt_name_item_goods"
        app:layout_constraintEnd_toStartOf="@id/txt_price_item_goods"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:gravity="center"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/txt_price_item_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        app:layout_constraintTop_toBottomOf="@id/txt_name_item_goods"
        app:layout_constraintStart_toEndOf="@id/txt_state_item_goods"

        tools:text="26,000원"
        android:paddingStart="5dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_created_at_item_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_price_item_goods"
        app:layout_constraintStart_toStartOf="@id/txt_name_item_goods"
        android:paddingStart="5dp"
        tools:text="2020-02-26"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>